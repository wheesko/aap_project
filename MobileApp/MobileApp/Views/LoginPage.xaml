<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.LoginPage">
    <ContentPage.Content>

        <StackLayout x:Name="LoginEntryStack" VerticalOptions="StartAndExpand" Margin="50,50,50,50">

            <Label x:Name="Lbl_Username" Text="Username" />
            <Entry x:Name="Entry_Username" Placeholder="Username" Text="{Binding Username}"/>
            <Label x:Name="Lbl_Password" Text="Password" />
            <Entry x:Name="Entry_Password" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Button x:Name="Btn_SignIn" Text="Sign in" Command="{Binding LoginCommand}"/>
            <Label x:Name="Lbl_Or" Text="Or" HorizontalOptions="Center"/>
            <Button x:Name="Btn_Register" Text="Register" Command="{Binding RegisterCommand}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>